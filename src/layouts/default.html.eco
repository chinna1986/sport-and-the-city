<!DOCTYPE html>
<html lang="<%= @document.language %>" class="sh-768">
  <head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/img/favicon/favicon-default.ico?v=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <title><%= @getPreparedTitle() %></title>

    <!-- Shims: IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]><script async src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

    <%- @mapStylePath(@site.styles).join('') %>
  </head>
  <body class="<%= @document.theme or 'default-theme' %>">

    <!-- Background -->
    <div class="background"></div>

    <!-- Header -->
    <div id="header" class="header">
      <ul id="header-languages" class="animated" data-language="<%= @document.language %>">
        <!-- <li><a href="#"> &#8226; &#8226; &#8226;</a> -->
        <li class="top-nav">
          <a href="#">&#9679;&#9679;&#9679;</a>
          <ul class="top-nav-menu">
            <li class="top-nav-arrow"></li>
            <li>
              <img class="top-nav-img" src="/img/thumbs/thumb-1.jpg">
              <a class="top-nav-item" href="#"><%= @document.Sport_In_Multiethnic_City %></a>
            </li>
            <li>
              <img class="top-nav-img" src="/img/thumbs/thumb-2.jpg">
              <a class="top-nav-item" href="#"><%= @document.Sport_and_Total_War %></a>
            </li>
            <li>
              <img class="top-nav-img" src="/img/thumbs/thumb-3.jpg">
              <a class="top-nav-item" href="#"><%= @document.Sport_in_Soviet_City %></a>
            </li>
            <li>
              <img class="top-nav-img" src="/img/thumbs/thumb-4.jpg">
              <a class="top-nav-item" href="#"><%= @document.Sport_in_Global_City %></a>
            </li>
          </ul>
        </li>
        <li class="separator">
        <li class="<%= 'active' if @document.language is 'en' %>"><a href="<%= @normalizeURL(@document.url, 'en') %>" data-ajax="page">EN</a>
        <li class="<%= 'active' if @document.language is 'ua' %>"><a href="<%= @normalizeURL(@document.url, 'ua') %>" data-ajax="page">UA</a>
      </ul>
      <span id="header-topics">
        <a id="header-title" href="<%= @normalizeURL('/index.html') %>" data-ajax="page"><%= @document.SPORT_AND_THE_CITY %></a>
        <a id="header-subtitle" href="<%= @normalizeURL('/index.html') %>" data-ajax="page"><%= @document.PEOPLE_SOCIETY_IDEOLOGY %></a>
      </span>
    </div>

    <!-- Grid -->
    <div id="grid-wrapper" class="grid-wrapper">
      <div id="grid-scroll-wrapper" class="grid-scroll-wrapper">
        <ul id="grid" class="grid"><%- @content %></ul>
      </div>
    </div>

    <!-- Nav button -->
    <div id="nav-prev"></div>
    <div id="nav-next"></div>

    <!-- Template for ajax modal -->
    <div id="show-modal" class="modal hide fade" tabindex="-1" data-loading="false" data-show="false">
      <div class="modal-header">
        <button type="button" class="close" onclick="history.back();" aria-hidden="true" tabindex="1">Ã—</button>
      </div>
      <div class="modal-body" id="show-modal-body"><h1>Loading...</h1></div>
    </div>

    <!-- Scripts -->
    <%- @mapScriptPath(@site.scripts).join('') %>
    <!-- <%- @getBlock('scripts').add(@site.scripts).toHTML() %> -->
  </body>
</html>
