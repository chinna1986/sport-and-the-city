<!DOCTYPE html>
<html lang="<%= @document.language %>">
  <head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/img/favicon/<%= 'favicon-default.ico' %>" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <title><%= @getPreparedTitle() %></title>

    <!-- Shims: IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]><script async src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

    <%- @getBlock('styles').add(@site.styles).toHTML() %>
  </head>
  <body class="<%= @document.theme or 'default-theme' %>">

    <!-- Background -->
    <div class="background"></div>

    <!-- Header -->
    <div id="header" class="header">
      <ul id="header-languages" data-language="<%= @document.language %>">
        <!-- <li><a href="#">HOME</a> -->
        <!-- <li class="separator"><span></span> -->
        <li class="<%= 'active' if @document.language is 'en' %>"><a href="<%= @normalizeURL(@document.url, 'en') %>">EN</a>
        <li class="<%= 'active' if @document.language is 'ua' %>"><a href="<%= @normalizeURL(@document.url, 'ua') %>">UA</a>
      </ul>
      <a id="header-title" href="<%= @normalizeURL('/index.html') %>"><%= @document.SPORT_AND_THE_CITY %></a>
      <a id="header-subtitle" href="<%= @normalizeURL('/index.html') %>"><%= @document.PEOPLE_SOCIETY_IDEOLOGY %></a>
    </div>

    <!-- Grid -->
    <div id="grid-wrapper" class="grid-wrapper">
      <div id="grid-scroll-wrapper" class="grid-scroll-wrapper">
        <ul id="grid" class="grid"><%- @content %></ul>
      </div>
    </div>

    <!-- Nav button -->
    <div id="nav-prev"></div>
    <div id="nav-next"></div>

    <!-- Template for ajax modal -->
    <div id="show-modal" class="modal hide fade" tabindex="-1" data-loading="true" data-show="false">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" tabindex="1">Ã—</button>
      </div>
      <div class="modal-body" id="show-modal-body"><h1>Loading...</h1></div>
    </div>

    <!-- Scripts -->
    <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
  </body>
</html>
